{% extends 'layout.twig' %}

{% block body %}

    {% if flash('error') %}
        <div class="alert alert-danger">
            {{ flash('error') }}
        </div>
    {% endif %}

    {% if flash('success') %}
        <div class="alert alert-success">
            {{ flash('success') }}
        </div>
    {% endif %}

    <form action="{{ path('auth.login') }}" method="post">
        {{ csrf_input() }}
        {{ field('username', null, 'Nom d\'utilisateur', { wrapper_class: 'col-md-6' }) }}
        {{ field('password', null, 'Mot de passe', { type: 'password', wrapper_class: 'col-md-6' }) }}
        <p>
            <a href="{{ path('auth.reminder') }}">Mot de passe oubli√© ?</a>
        </p>
        <button class="btn btn-primary">Se connecter</button>
    </form>
    
{% endblock %}
